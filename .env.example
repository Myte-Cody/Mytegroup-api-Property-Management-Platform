# API Configuration
NODE_ENV=development

# Ports
# Preferred: APP_PORT (overrides per-env ports when set)
APP_PORT=3000
# Optional per-env ports (used only if APP_PORT is not set)
PORT_DEV=3000
PORT_PROD=80

# External URLs
# Public URL where this API is reachable (e.g., ECS + ALB DNS/host rule)
APP_BASE_URL=https://mytegroup-api-property-management-platform.mytecody.com
# Public URL of the web app that consumes this API
CLIENT_BASE_URL=https://mytegroup-web-property-management-platform.mytecody.com

# CORS
# Comma-separated list of allowed origins for each environment
CORS_ORIGINS_DEV=http://localhost,http://localhost:80,http://127.0.0.1,http://127.0.0.1:80,http://192.168.2.51,http://192.168.2.51:80,http://localhost:3000,http://localhost:4000
CORS_ORIGINS_PROD=https://mytegroup-web-property-management-platform.mytecody.com

# MongoDB Configuration
# Atlas or self-hosted MongoDB URI (do not quote in GitHub secrets)
DB_URL=mongodb+srv://username:password@cluster.example.mongodb.net/
MONGO_DB_NAME=C0012PropertyManagementPlatform

# Authentication
JWT_SECRET=your_jwt_secret_key
# Token lifetime (code defaults to 1d if not provided)
JWT_EXPIRATION=1d

# Admin Seeder Configuration
# Default admin user credentials (used by npm run seed:admin)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
