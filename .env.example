# API Configuration
NODE_ENV=development

# Ports
# Preferred: APP_PORT (overrides per-env ports when set)
APP_PORT=3000
# Optional per-env ports (used only if APP_PORT is not set)
PORT_DEV=3000
PORT_PROD=80

# External URLs
# Public URL where this API is reachable (e.g., ECS + ALB DNS/host rule)
APP_BASE_URL=https://mytegroup-api-property-management-platform.mytecody.com
# Public URL of the web app that consumes this API
CLIENT_BASE_URL=https://mytegroup-web-property-management-platform.mytecody.com

# CORS
# Comma-separated list of allowed origins for each environment
CORS_ORIGINS_DEV=http://localhost,http://localhost:80,http://127.0.0.1,http://127.0.0.1:80,http://192.168.2.51,http://192.168.2.51:80,http://localhost:3000,http://localhost:4000
CORS_ORIGINS_PROD=https://mytegroup-web-property-management-platform.mytecody.com

# MongoDB Configuration
# Atlas or self-hosted MongoDB URI (do not quote in GitHub secrets)
DB_URL=mongodb+srv://username:password@cluster.example.mongodb.net/
MONGO_DB_NAME=C0012PropertyManagementPlatform

# Authentication
JWT_SECRET=your_jwt_secret_key
# Token lifetime for access tokens (default 15m)
JWT_EXPIRATION=15m
# Refresh token TTL (default 30d)
REFRESH_TOKEN_TTL=30d
# Cookie domain for HttpOnly cookies (e.g., .mytegroup.ai). Leave empty for localhost
AUTH_COOKIE_DOMAIN=

# Admin Seeder Configuration
# Default admin user credentials (used by npm run seed:admin)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123


# Media Configuration (path is derived from NODE_ENV; see media.module.ts)
MEDIA_DEFAULT_DISK=local
AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BASE_URL=

# Email Configuration
# SMTP settings for email sending
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
# Use Ethereal for development debugging (generates test accounts automatically)
EMAIL_USE_ETHEREAL=true

# Twilio SMS Configuration
# Get these credentials from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
# Set to 'true' to enable SMS sending (useful to disable in development)
TWILIO_ENABLED=true

# Brand
BRAND_NAME=MYTE
BRAND_LOGO_URL=
BRAND_PRIMARY_COLOR=#2563eb

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Set to 'true' to disable BullMQ/Redis queues (useful for local dev without Redis)
REDIS_DISABLE=false

# OpenAI Configuration
OPENAI_API_KEY=""
OPENAI_FEEDBACK_MODEL=gpt-4.1-mini
# Marketing landing-page chatbot model (e.g., gpt-5.1 or gpt-4.1-mini)
OPENAI_MARKETING_MODEL=gpt-5.1

# AI Features Endpoint
AI_ENDPOINT=http://localhost:8000

# Docker Compose Configuration
FRONTEND_REPO_URL=
